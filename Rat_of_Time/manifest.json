{
  "manifest_version": 3,
  "name": "Rat of Time",
  "version": "1.0",
  "description": "テキストボックスに自動で値を入力します",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_title": "自動入力する",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "option.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kingtime.jp/*"
      ],
      "js": [
        "utils.js",
        "config.js"
      ],
      "run_at": "document_idle"
    }
  ]
}