{
  "manifest_version": 3,
  "name": "Rat of Time",
  "version": "1.0",
  "description": "テキストボックスに自動で値を入力します",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "自動入力する",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config.js"
      ],
      "matches": [
        "*://*.kingtime.jp/*"
      ]
    }
  ],
  "options_ui" : {
    "page" : "option.html",
    "open_in_tab" : false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js"],
      "run_at": "document_idle"
    }
  ]
}